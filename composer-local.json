{
  "name": "planet4-india/planet4-india",
  "version": "1.26.0",
  "require": {
    "greenpeace/planet4-child-theme-india": "0.*"
  },
  "scripts": {
    "core:language": "wp language core install --activate hi_IN",
    "install:plugin-wpml": "wp plugin install --activate https://raw.githubusercontent.com/greenpeace/planet4-3rdparty-plugins/master/sitepress-multilingual-cms-3.9.3.zip",
    "install:plugin-wpml-management": "wp plugin install --activate https://raw.githubusercontent.com/greenpeace/planet4-3rdparty-plugins/master/wpml-translation-management-2.5.2.zip",
    "install:plugin-wpml-searchwp": "wp plugin install --activate https://raw.githubusercontent.com/greenpeace/planet4-3rdparty-plugins/master/searchwp-wpml-1.4.0.zip",

    "site:custom": [
      "@core:language",
      "@install:plugin-wpml",
      "@install:plugin-wpml-management",
      "@install:plugin-wpml-searchwp"
    ]
  }
}
